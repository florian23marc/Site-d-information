{% extends 'base.html.twig' %}

{% block title %} Modifier le mot de passe {% endblock %}

{% block body %}

  <div class="container mt-5 p-lg-5">
    <div class="container text-start">
            <div class="row">  
                <h1>Modifier mot de passe </h1>
                <hr>
            </div>
        <a href="{{ path ('app_espace1') }}">Retourner à mon compte</a>
        <hr>
    </div>
    {% if app.flashes('success') is defined %} {# cette méthode permet d'afficher un message d'erreur#}
        {% for message in app.flashes('success') %} {# La clé message permet de recupérer le message de la clé  success #}
            <div class="alert alert-success">
                {{ message }} {# Boucle sur les messages #}
            </div>
        {% endfor %}
        {% elseif app.flashes('danger') is defined %}
            {% for message in app.flashes('danger') %} {# La clé message permet de recupérer le message de la clé  danger #}
            <div class="alert alert-danger">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {% endfor %}
    {% endif %}
    <div class="mt-5">
    {{ form(form)}}
    </div>
{% endblock %}